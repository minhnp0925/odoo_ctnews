<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="news_website_homepage" name="News Website Homepage">
    <t t-call="website.layout">
        <div class="container">
            <div class="row">
                <!-- Left Column: Featured Article -->
                <div class="col-lg-8">
                    <div class="featured-article">
                        <img class="img-fluid" src="https://placehold.co/600x400/png" alt="Featured Image" style="width: 100%; height: auto;"/>
